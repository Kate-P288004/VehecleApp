<Window x:Class="VehecleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Entry" Height="450" Width="350">
    <StackPanel Margin=" 20">

        <TextBlock Text="Brand:" />
        <TextBox Name="BrandInput" Margin="0,0,0,10"/>

        <TextBlock Text="Model:" />
        <TextBox Name="ModelInput" Margin="0,0,0,10"/>

        <TextBlock Text="Year:" />
        <TextBox Name="YearInput" Margin="0,0,0,10"/>

        <Button Content="Add Vehicle" Click="AddVehicle_Click" Margin="0,10"/>

        <TextBlock Text="Vehicles:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox Name="VehicleListBox" Height="150"/>
       
    </StackPanel>
    
</Window>
