<Window x:Class="VehicleApp.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Vehicle Entry" Height="450" Width="350"

        Background="Azure">
    <Border BorderBrush="Coral" BorderThickness="2" CornerRadius="10" Padding="15" Margin="10" Background="White">
        <StackPanel>
            <!-- Heading -->
            <TextBlock Text="Welcome to the Vehicle Entry Application"

                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <TextBlock Text="Please enter vehicle details below:"

                       FontSize="14" Margin="0,0,0,20"/>
            <!-- Brand -->
            <TextBlock Text="Brand:" />
            <TextBox Name="BrandInput" Margin="0,0,0,10"/>
            <!-- Model -->
            <TextBlock Text="Model:" />
            <TextBox Name="ModelInput" Margin="0,0,0,10"/>
            <!-- Year -->
            <TextBlock Text="Year:" />
            <TextBox Name="YearInput" Margin="0,0,0,10"/>
            <!-- Button -->
            <Button Content="Add Vehicle"

                    Click="AddVehicle_Click"

                    Background="Coral" Foreground="White"

                    FontWeight="Bold" Margin="0,0,0,15"/>
            <!-- Output -->
            <TextBlock Text="Vehicles:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox Name="VehicleListBox" Height="150"/>
        </StackPanel>
    </Border>
</Window>
 